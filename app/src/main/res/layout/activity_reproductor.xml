<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reproductor">

    <TextView
        android:id="@+id/txtGenero"
        android:layout_width="345dp"
        android:layout_height="45dp"
        android:background="@color/azulitoTransparente"
        android:text="-- BACHATA PLAYLIST --"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <LinearLayout
        android:layout_width="333dp"
        android:layout_height="572dp"
        android:background="@color/negroTransparente"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.704">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="292dp"
            android:layout_height="294dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="10dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/eunel"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="200dp" />

        <LinearLayout
            android:layout_width="333dp"
            android:layout_height="51dp"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="47dp"
            tools:layout_editor_absoluteY="92dp">

            <Button
                android:id="@+id/btn_anterior"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/anterior"
                android:onClick="Anterior" />

            <Button
                android:id="@+id/btn_play"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/reproducir"
                android:onClick="PlayPause" />

            <Button
                android:id="@+id/btn_stop"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/detener"
                android:onClick="Stop" />

            <Button
                android:id="@+id/btn_siguiente"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/siguiente"
                android:onClick="Siguiente" />

            <Button
                android:id="@+id/btn_repetir"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/repetir"
                android:onClick="Repetir" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvwAutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_margin="15dp"
            android:text="Aldana" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>