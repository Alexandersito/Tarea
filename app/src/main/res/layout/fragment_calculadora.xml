<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalculadoraFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#726FE6C5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:layout_marginBottom="10dp">

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingHorizontal="15dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/vista"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:paddingRight="20dp"
                android:textSize="60dp"
                android:gravity="right"
                android:background="#EDEAD8"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btnLimpiar"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:text="C"
                android:textSize="50dp"/>
            <Button
                android:id="@+id/btnDividir"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:text="/"
                android:textSize="50dp"/>
            <Button
                android:id="@+id/btnMultiplicar"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:text="X"
                android:textSize="50dp"/>
            <Button
                android:id="@+id/btnBorrar"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:text="Borrar"
                android:textSize="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn7"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:text="7"
                android:textSize="50dp"
                android:backgroundTint="#f5d208"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/btn8"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:text="8"
                android:textSize="50dp"
                android:backgroundTint="#f5d208"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/btn9"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:text="9"
                android:textSize="50dp"
                android:backgroundTint="#f5d208"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/btnRestar"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:text="-"
                android:textSize="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn4"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:text="4"
                android:textSize="50dp"
                android:backgroundTint="#f5d208"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/btn5"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:text="5"
                android:textSize="50dp"
                android:backgroundTint="#f5d208"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/btn6"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:text="6"
                android:textSize="50dp"
                android:backgroundTint="#f5d208"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/btnSumar"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:text="+"
                android:textSize="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btn1"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:text="1"
                android:textSize="50dp"
                android:backgroundTint="#f5d208"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/btn2"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:text="2"
                android:textSize="50dp"
                android:backgroundTint="#f5d208"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/btn3"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:text="3"
                android:textSize="50dp"
                android:backgroundTint="#f5d208"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/btnResultado"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:text="="
                android:textSize="50dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/btnPorcentaje"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:text="%"
                android:textSize="50dp"/>
            <Button
                android:id="@+id/btn0"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:text="0"
                android:textSize="50dp"
                android:backgroundTint="#f5d208"
                android:textColor="@color/black" />
            <Button
                android:id="@+id/btnPunto"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginRight="10dp"
                android:text="."
                android:textSize="50dp"/>
            <Button
                android:layout_width="90dp"
                android:layout_height="100dp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>